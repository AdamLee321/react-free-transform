{
  "name": "react-free-transform",
  "description": "A free transform tool",
  "author": "Solaiman Kmail <psokmail@gmail.com> (https://github.com/skmail)",
  "license": "MIT",
  "version": "1.0.0",
  "main": "./lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/skmail/react-free-transform"
  },
  "keywords": [
    "react",
    "reactjs",
    "free-transform",
    "resize",
    "draggable"
  ],
  "bugs": {
    "url": "https://github.com/skmail/react-free-transform/issues"
  },
  "scripts": {
    "build:lib": "babel src --out-dir lib --ignore __tests__",
    "test": "jest --verbose",
    "test:watch": "npm run test -- --watchAll",
    "test:cov": "npm run test -- --coverage ",
    "test:flow": "flow check",
    "lint": "eslint src",
    "coverage": "codecov"

  },
  "dependencies": {
    "react": "^16.4.2",
    "react-dom": "^16.4.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "codecov": "^3.0.4",
    "eslint": "^5.3.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-react": "^7.10.0",
    "jest": "^23.4.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/tests/**/*.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "tests/.*\\.test\\.js$"
  }
}
